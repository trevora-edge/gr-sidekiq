<?xml version="1.0"?>
<block>
    <name>Sidekiq TX</name>
    <key>sidekiq_sidekiq_tx</key>
    <category>[sidekiq]</category>
    <import>import sidekiq</import>
    <make>sidekiq.sidekiq_tx($card, $sample_rate, $attenuation, $frequency, $bandwidth, $sync, $suppress_tune_transients,
        $dataflow_mode, $buffer_size, $filter_override_taps)
    </make>
    <callback>set_tx_sample_rate($sample_rate)</callback>
    <callback>set_tx_attenuation($attenuation)</callback>
    <callback>set_tx_frequency($frequency)</callback>
    <callback>set_tx_bandwidth($bandwidth)</callback>
    <callback>set_tx_suppress_tune_transients($suppress_tune_transients)</callback>
    <callback>set_tx_filter_override_taps($filter_override_taps)</callback>
    <param>
        <name>Card number</name>
        <key>card</key>
        <value>0</value>
        <type>byte</type>
    </param>
    <param>
        <name>Sample Rate</name>
        <key>sample_rate</key>
        <value>1e6</value>
        <type>real</type>
    </param>
    <param>
        <name>Attenuation</name>
        <key>attenuation</key>
        <value>1</value>
        <type>real</type>
    </param>
    <param>
        <name>Frequency</name>
        <key>frequency</key>
        <value>2400e6</value>
        <type>real</type>
    </param>
    <param>
        <name>Bandwidth</name>
        <key>bandwidth</key>
        <value>1e6</value>
        <type>real</type>
    </param>
    <param>
        <name>Sync</name>
        <key>sync</key>
        <value>1</value>
        <type>int</type>
        <option>
            <name>Zero</name>
            <key>1</key>
        </option>
        <!--<option>-->
            <!--<name>GPS PPS</name>-->
            <!--<key>2</key>-->
        <!--</option>-->
        <option>
            <name>PC Clock</name>
            <key>3</key>
        </option>
    </param>
    <param>
        <name>Suppress Tune Transients</name>
        <key>suppress_tune_transients</key>
        <value>True</value>
        <type>bool</type>
        <option>
            <name>False</name>
            <key>False</key>
        </option>
        <option>
            <name>True</name>
            <key>True</key>
        </option>
    </param>
    <param>
        <name>Dataflow Mode</name>
        <key>dataflow_mode</key>
        <value>0</value>
        <type>int</type>
        <option>
            <name>Immediate</name>
            <key>0</key>
        </option>
        <option>
            <name>Timestamps</name>
            <key>1</key>
        </option>
    </param>
    <param>
        <name>Buffer Size</name>
        <key>buffer_size</key>
        <value>1020</value>
        <type>int</type>
        <option>
            <name>1020</name>
            <key>1020</key>
        </option>
        <option>
            <name>4092</name>
            <key>4092</key>
        </option>
        <option>
            <name>16380</name>
            <key>16380</key>
        </option>
        <option>
            <name>32764</name>
            <key>32764</key>
        </option>
    </param>
    <param>
        <name>Filter Override Taps</name>
        <key>filter_override_taps</key>
        <type>real_vector</type>
    </param>
    <sink>
        <name>command</name>
        <type>message</type>
        <optional>1</optional>
    </sink>
    <sink>
        <name>in</name>
        <type>complex</type>
    </sink>
    <source>
        <name>telemetry</name>
        <type>message</type>
        <optional>1</optional>
    </source>
</block>
