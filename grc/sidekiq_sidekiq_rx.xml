<?xml version="1.0"?>
<block>
    <name>Sidekiq RX</name>
    <key>sidekiq_sidekiq_rx</key>
    <category>[sidekiq]</category>
    <import>import sidekiq</import>
    <make>sidekiq.sidekiq_rx($card, $sample_rate, $gain, $gain_mode, $frequency, $bandwidth, $sync, $num_items, $filter_override_taps)</make>
    <callback>set_rx_sample_rate($sample_rate)</callback>
    <callback>set_rx_gain($gain)</callback>
    <callback>set_rx_frequency($frequency)</callback>
    <callback>set_rx_bandwidth($bandwidth)</callback>
    <callback>set_rx_filter_override_taps($filter_override_taps)</callback>
    <param>
        <name>Card number</name>
        <key>card</key>
        <value>0</value>
        <type>byte</type>
    </param>
    <param>
        <name>Sample Rate</name>
        <key>sample_rate</key>
        <value>1e6</value>
        <type>real</type>
    </param>
    <param>
        <name>Gain</name>
        <key>gain</key>
        <value>1</value>
        <type>real</type>
    </param>
    <param>
        <name>Gain Mode</name>
        <key>gain_mode</key>
        <value>0</value>
        <type>int</type>
        <option>
            <name>Manual Gain</name>
            <key>0</key>
        </option>
        <option>
            <name>Auto Gain</name>
            <key>1</key>
        </option>
    </param>
    <param>
        <name>Frequency</name>
        <key>frequency</key>
        <value>2400e6</value>
        <type>real</type>
    </param>
    <param>
        <name>Bandwidth</name>
        <key>bandwidth</key>
        <value>1e6</value>
        <type>real</type>
    </param>
    <param>
        <name>Sync</name>
        <key>sync</key>
        <value>1</value>
        <type>int</type>
        <option>
            <name>Zero</name>
            <key>1</key>
        </option>
        <!--<option>-->
            <!--<name>GPS PPS</name>-->
            <!--<key>2</key>-->
        <!--</option>-->
        <option>
            <name>PC Clock</name>
            <key>3</key>
        </option>
    </param>
    <param>
        <name>Filter Override Taps</name>
        <key>filter_override_taps</key>
        <type>real_vector</type>
    </param>
    <param>
        <name>Vec Length</name>
        <key>num_items</key>
        <value>4096</value>
        <type>int</type>
    </param>
    <sink>
        <name>command</name>
        <type>message</type>
        <optional>1</optional>
    </sink>
    <source>
        <name>telemetry</name>
        <type>message</type>
        <optional>1</optional>
    </source>
    <source>
        <name>out</name>
        <type>complex</type>
        <vlen>$num_items</vlen>
    </source>
</block>
